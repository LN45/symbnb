{% extends 'base.html.twig' %}

{% block title %}
    {{ ad.title }}
{% endblock %}

{% block body %}
    <div style="background-image: url({{ ad.coverImage }})" class="adtitle">
        <div class="container">
            <h1>{{ ad.title }}</h1>
            <p>{{ ad.introduction }}</p>
            <p class="h2">
                <strong>{{ ad.rooms }} chambres</strong> pour <strong>{{ ad.price | number_format(2, ',', ' ')}}&euro;</strong> par nuit
            </p>
            <a href="{{ path('booking_create', {'slug' : ad.slug})}}" class="href btn btn-primary">Réserver !</a>
            {% if app.user and app.user == ad.author%}
                <a href="{{ path('ads_edit', {'slug': ad.slug}) }}" class="btn btn-secondary">Modifier l'annonce</a>
            {% endif %}
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-7 mb-3">
                <p>{{ ad.content }}</p>
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for image in ad.images %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}"
                                {% if loop.first %}active {% endif %}></li>
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">
                        {% for image in ad.images %}
                            <div class="carousel-item {% if loop.first %}active {% endif %}">
                                <img src="{{ image.url }}" class="d-block w-100" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>{{ ad.title }}</h5>
                                    <p>{{ image.caption }}</p>
                                </div>
                            </div>
                        {% endfor %}
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                           data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                           data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>

                <hr>
                {% if ad.comments|length > 0 %}
                    <h2 class="mb-3">Commentaires de nos voyageurs :</h2>

                    <div class="alert alert-info">
                        <h4 class="alert-heading text-center">
                            <div class="row align-items-center">
                                <div class="col">
                                    Note globale donnée par nos voyageurs
                                </div>
                                <div class="col">
                                    {% include 'partials/rating.html.twig' with { 'rating' : ad.avgRatings} %}
                                    <br>
                                    <small>(Calculée sur {{ ad.comments|length }} avis)</small>
                                </div>
                            </div>
                        </h4>
                    </div>

                    {% for comment in ad.comments %}
                        <div class="bg-light rounded mb-3 py-3 px-3">
                            <strong>{{ comment.author.firstName }}</strong> a dit :
                            <blockquote>
                                {{ comment.content }}
                            </blockquote>
                            <strong>Note donnée  :</strong>

{#                            <span class="rating">#}
{#                                {% for i in 1..5 %}#}
{#                                    {%  if i <= comment.rating %}#}
{#                                        <i class="fas fa-star"></i>#}
{#                                    {% else %}#}
{#                                        <i class="far fa-star"></i>#}
{#                                    {% endif %}#}
{#                                {% endfor %}#}
{#                            </span>#}

                            {% include 'partials/rating.html.twig' with {'rating': comment.rating} %}

                        </div>
                    {% endfor %}
                {% else %}
                    <h2>Cette annonce n'a pas encore reçue de commentaires...</h2>
                {% endif %}
            </div>
            <div class="col">
                {% set a = ad.author %}
                <div class="row mb-3 align-items-center">
                    <div class="col-3">
                        <a href="{{ path('user_show', {'slug' : a.slug}) }}">
                            <img src="{{a.picture}}" class="avatar avatar-medium" alt="Avatar de {{ a.fullName }}">
                        </a>
                    </div>
                    <div class="col">
                        <a href="{{ path('user_show', {'slug' : a.slug}) }}">
                            <h3>{{ a.fullName }}</h3>
                        </a>
                        <span class="badge-primary">{{ a.ads | length }} annonce{% if a.ads | length < 2 %} {% else %}s {% endif %}</span>
                    </div>
                    <div>
                        <p>{{ a.description }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
